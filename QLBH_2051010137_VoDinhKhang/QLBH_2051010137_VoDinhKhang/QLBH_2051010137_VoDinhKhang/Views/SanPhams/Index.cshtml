@model PagedList.IPagedList<QLBH_2051010137_VoDinhKhang.Models.SanPham>
@using PagedList.Mvc;
@using QLBH_2051010137_VoDinhKhang.Models
<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";


}

<h2 class="text-center">Danh Mục Sản Phẩm</h2>

<p class=" btn btn-info bg-primary ">
    @Html.ActionLink("Thêm sản phẩm", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Tên Sản Phẩm", "Index", new { sortOrder = ViewBag.SortByName })
        </th>
        <th>
            @Html.ActionLink("Đơn Giá", "Index", new { sortOrder = ViewBag.SortByPrice })
        </th>
        <th>
            Loại Sản Phẩm
        </th>
        <th>
            Hình Ảnh
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoaiSP)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.HinhAnh)*@
                @Html.Image("../" + item.HinhAnh, "", "50")
            </td>

            <td class="text-white ">
                <span class=" btn btn-info bg-info ">
                    <i class="fas fa-pencil-alt">
                    </i> @Html.ActionLink("Sửa", "Edit", new { id = item.MaSP })
                </span>

                <span class=" btn btn-danger bg-danger">
                    <i class="fas fa-trash">
                    </i>@Html.ActionLink("Xóa", "Delete", new { id = item.MaSP })
                </span>

            </td>
        </tr>
    }

</table>
<div>
    Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index",
    new
    {
        page,
        sortOrder = ViewBag.CurrentSort
    }))
</div>