@model List<QLBH_2051010137_VoDinhKhang.Models.CartItem>
    @using QLBH_2051010137_VoDinhKhang.Models;
    @{

        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>@ViewBag.Title</h2>

    @if (Model == null)
    {
        <p class="text-info text-center">
            Chưa có sản phẩm trong giỏ hàng
        </p>
    }
    else
    {
        <div class="row">
            <div class="col-sm-12">
                <div class="table-responsive ">
                    <table class="table table-bordered table-dark align-middle">
                        <tr >
                            <th>Tên</th>
                            <th>Hình Ảnh</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">   @Html.Image("../../" + @item.Hinh, @item.Hinh, "100%") </td>
                                <td><a target="_blank" href="@Url.Action("Details","Sanphams", new {id=item.MaSP})">@item.TenSP</a></td>

                                <td>
                                    <form action="@Url.Action("Update")" method="get">
                                        <input type="hidden" name="MaSP" value="@item.MaSP" />
                                        <input type="number" min="1" name="txtSoluong" value="@item.SoLuong" />
                                        <button type="submit" class="btn btn-secondary btn-sm">Cập nhật</button>
                                    </form>
                                </td>
                                <td>@item.DonGia.ToString() VNĐ</td>
                                <td>@item.ThanhTien.ToString() VNĐ</td>
                                <td>
                                    <a href="@Url.Action("DelCartItem", new { MaSP =@item.MaSP })" onclick="return confirm ('Xóa sản phẩm này?');" class="btn btn-danger btn-sm justify-content-center">Xóa</a>
                                </td>
                            </tr>

                        }
                        <tr>
                            <td></td>
                            <td class="text-right">Tổng số lượng</td>
                            <td>@Model.Sum(m => m.SoLuong)</td>
                            <td class="text-right">Tổng thành tiền</td>
                            <td>@Model.Sum(m => m.ThanhTien) VNĐ</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td colspan="6">
                                <form action="@Url.Action("Order","Giohang")" method="get">
                                    Thông tin đặt hàng - Email: <input type="email" style="width:250px" name="Email" />
                                    - Điện thoại: <input type="text" style="width:120px" name="Phone" />
                                    <input type="submit" value="Đặt hàng" class="btn btn-success btn-sm w-auto" />
                                    <a class="btn btn-success btn-sm" href="@Url.Action("Index","Home")">
                                        Tiếp tục mua hàng
                                    </a>
                                </form>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    }

