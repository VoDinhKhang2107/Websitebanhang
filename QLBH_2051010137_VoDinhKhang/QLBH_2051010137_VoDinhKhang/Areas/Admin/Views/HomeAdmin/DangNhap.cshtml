    <!-- headernavmenu -->
    <div class="headermenu">
        <nav class="navbar navbar-expand-lg navbar-dark" id="navbarmenu">
            <div class="container-fluid">
                <a class="navbar-brand" href="Trangchu.html">
                    <img src="~/Images/KUYN_APPLE.png" alt="Avatar Logo" style="width:
            70px" class="rounded-circle me-auto bg-white mx-5 id="LoginShop" />
                </a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent"
                        aria-expanded="false">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" id="iPhone" href="#">iPhone</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="Mac" href="#">Mac</a>
                        </li>
                        <li class="nav-item">
