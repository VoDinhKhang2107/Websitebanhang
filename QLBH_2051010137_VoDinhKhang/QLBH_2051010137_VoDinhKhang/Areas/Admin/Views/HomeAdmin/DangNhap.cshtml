                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="Airpods" href="#">Airpods</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="phukien" href="#">Phụ kiện</a>
                        </li>
                    </ul>


                </div>
            </div>
        </nav>
    </div>
    <!-- ket thuc headernavmenu -->
    <form role="form" method="post">
        <div class="container" id="dangnhap">

            <div class="row">
                <div class="col-md-5 py-3 py-md-0 m-auto" id="slide1">
                    <h3 class="text-center">Chào Bạn!</h3>
                </div>
                <div class="col-md-7 py-3 py-md-0" id="slide2">
                    <h3 class="text-center">Đăng Nhập Tài Khoản</h3>

                    <div class="input2 text-center form-group">
                        <input class="input-login-username"
                               type="text"
                               name="user"
                               placeholder="Tên đăng Nhập"
                               id="account" />
                    </div>
                    <div class="input2 text-center form-group">
                        <input class="input-login-password"
                               type="password"
                               name="password"
                               placeholder="Mật khẩu"
                               id="password" />
                    </div>

                    <p class="text-danger text-center">
                        @TempData["error"]
                    </p>

                    <p class="text-center py-4" id="btn-dangnhap2">
                        <button type="submit" class="btn btn-outline-warning" href="#">
                            Đăng nhập
                        </button>
                    </p>
                    @*<div class="text-center py-3">
                        <a href="" class="d-block">Quên mật khẩu?</a>
                        <a href="~/Admin/HomeAdmin/DangKy">Tạo tài khoản</a>
                    </div>*@

                    <div class="position-fixed bottom-0 end-0 me-3 alert"
                         id="noLogin"
                         role="alert">
                        <span id="NdLoi"></span>
                    </div>
                </div>

            </div>

        </div>
    </form>



    <!-- tư vấn -->
