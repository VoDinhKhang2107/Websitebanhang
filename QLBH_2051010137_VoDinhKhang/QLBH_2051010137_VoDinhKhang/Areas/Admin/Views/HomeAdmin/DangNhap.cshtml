        </div>
        <div class="other-links">
            <button id="btn-dangnhap">
                <a href="~/Admin/HomeAdmin/DangNhap">Đăng nhập</a>
            </button>
            @*<button id="btn-dangky">
                <a href="~/Admin/HomeAdmin/DangKy">Đăng ký</a>
            </button>*@

            <i class="fa-solid fa-user"></i>

            <div class="d-inline shopping ">
